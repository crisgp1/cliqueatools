# Configuración de la base de datos PostgreSQL
DB_USER=postgres
DB_HOST=localhost
DB_NAME=simulador_credito
DB_PASSWORD=tu_contraseña
DB_PORT=5432

# Puerto para el servidor Express
PORT=3001

# Entorno (development, production)
NODE_ENV=development

# Configuración CORS (para producción)
# CORS_ORIGIN=https://tu-dominio.com

# Secreto JWT (si implementas autenticación)
# JWT_SECRET=tu_secreto_muy_seguro

# El archivo .env real debe ser creado copiando este ejemplo
# y ajustando los valores según tu entorno.
# IMPORTANTE: No versionar el archivo .env real